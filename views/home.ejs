        }

        .ctimes {
            width: 50px;
            height: 50px;
            background-color: #b8f132;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            border-radius: 25px;
            float: right;
            margin-top: 50px;
            margin-right: 50px;
        }
