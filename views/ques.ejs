                <input type="checkbox" name="5_T" value="A" />
                <h6>篮球</h6>
                <input type="checkbox" name="5_T" value="B" />
                <h6>Rap</h6>
                <input type="checkbox" name="5_T" value="C" />
                <h6>大碗宽面</h6>
                <input type="checkbox" name="5_T" value="D" />
                <h6>跳舞</h6>
            </div>
        </div>

        <div class="container-fluid" style="width:80%;margin: auto;margin-top:50px;margin-bottom: 50px">
            <button class="btn btn-primary btn-block" onclick="getAnswer()">提交</button>
        </div>

    </div>
    <% } %>

